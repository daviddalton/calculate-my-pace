<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daltonapps.calculatemypace.calculatemypace"
    android:versionCode="5"
    android:versionName="1.0.5">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.daltonapps.calculatemypace.MainActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize"
                  android:parentActivityName="com.daltonapps.calculatemypace.FirstActivity"/>
        <activity android:name="com.daltonapps.calculatemypace.FirstActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.daltonapps.calculatemypace.modules.stopwatch.StopwatchActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize"
                  android:parentActivityName="com.daltonapps.calculatemypace.FirstActivity"/>
        <activity android:name="com.daltonapps.calculatemypace.modules.log.LogsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.daltonapps.calculatemypace.FirstActivity"/>
    </application>

</manifest>
