<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.calculatemypace.david.calculate_my_pace.TimeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/time"
        android:layout_below="@+id/distance"
        android:hint="Your time will go here..."
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="30dp" /> <!-- This is the total time -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_button"
        android:id="@+id/calculate_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#3846a2"
        android:textColor="#f9f9f9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/pace"
        android:layout_marginTop="82dp"
        android:hint="min/mile"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />  <!-- This is the pace -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/distance"
        android:hint="mile"
        android:layout_below="@+id/pace"
        android:layout_alignStart="@+id/pace" />  <!-- This is the distance -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert your pace and distance in the fields below and then hit the calculate button!"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="18dp" />
</RelativeLayout>
